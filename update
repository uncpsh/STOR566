models_to_run = {
    # CNN baseline
    "resnet18": lambda: get_resnet18(num_classes),

    # Vanilla Transformer baseline (Vaswani-style encoder on patch tokens)
    "transformer_vanilla": lambda: ViTMSA(
        img_size=img_size,
        patch_size=patch_size,
        num_classes=num_classes,
        embed_dim=192,
        depth=6,
        num_heads=6,
        mlp_ratio=4.0,
        drop=0.0,
    ),

    # Vanilla ViT baseline (custom MHSA block)
    "vit_vanilla": lambda: ViTVanilla(
        img_size=img_size,
        patch_size=patch_size,
        num_classes=num_classes,
        embed_dim=192,
        depth=6,
        num_heads=6,
        mlp_ratio=4.0,
        drop=0.0,
    ),

    # HiLo model
    "hilovit": lambda: HiLoViT(
        img_size=img_size,
        patch_size=patch_size,
        num_classes=num_classes,
        embed_dim=192,
        depth=6,
        num_heads=6,
        window_size=2,
        alpha=0.5,
    ),
}
